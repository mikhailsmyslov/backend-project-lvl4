mixin avatar(user, iconSize)
  - const { fullName, id } = user;
  - const iconSizes = { small: "24", medium: "48", large: "64" };
  - const size = iconSizes[iconSize] || "28";
  if user.isActive
    canvas.user-icon.rounded-circle(data-name=user.fullName, width=size, height=size)&attributes(attributes)
  else
    i.far.fa-dizzy.fa-lg&attributes(attributes)
